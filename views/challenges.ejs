<% include partials/header %>
<title>IHL</title>
</head>
<body class="min-h-screen flex-col">
    <% include partials/nav %>
    <main class="flex flex-1 min-h-screen">
        <!-- side bar -->
        <div class="sidebar w-1/6 bg-blue">
            <div class="cover text-white flex flex-col justify-center items-center px-4 pt-8">
                <div class="flex justify-center">
                    <img src="http://lorempixel.com/80/80/people/" alt="" class="rounded-full">
                </div>
                <p class="text-center my-3">Person name</p>
                <div class="w-full border-grey">
                    <p class="block mb-4">Rank <span class="float-right">#1</span></p>
                </div>
                <div class="w-full border-b">
                    <div class="h-5 rounded-full bg-white p-1">
                        <div class="w-1/2 bg-blue h-3 rounded-full">
                        </div>
                    </div>
                    <p class=" mb-4 mt-1"><small><strong>145</strong> more points to level up</small></p>
                </div>
            </div>
            <div class="side-links flex">
                <ul class="list-reset flex-1">
                    <a class="text-white" href="/home"><li class="py-4 px-4 hover:bg-blue-dark"> Home</li></a>
                    <a class="text-white" href="/friends"><li class="py-4 px-4 hover:bg-blue-dark"> Friends</li></a>
                    <a class="text-white" href="#"><li class="py-4 px-4 hover:bg-blue-dark"> Challenges</li></a>
                    <a class="text-white" href="/achievements"><li class="py-4 px-4 hover:bg-blue-dark"> Achievements</li></a>
                    <a class="text-white" href="/leaderboard"><li class="py-4 px-4 hover:bg-blue-dark"> Leaderboard</li></a>
                    <a class="text-white" href="/settings"><li class="py-4 px-4 hover:bg-blue-dark"> Settings</li></a>
                    <a class="text-white" href="/logout"><li class="py-4 px-4 hover:bg-blue-dark"> Logout</li></a>
                </ul>
            </div>
        </div>


        <!-- main-content -->
        <div class="main-content flex flex-col w-5/6 px-8 mb-8">
            <h1 class="my-8 py-2 border-b border-t border-grey-light text-grey-darker">Challenges</h1>
            <div class="challenge-box flex flex-col p-4">
                <div id="tab" class="flex">
                    <a class="px-4 py-2 tab-active bg-grey hover:bg-blue text-white rounded-l">Live</a>
                    <a class="px-4 py-2 bg-grey hover:bg-blue text-white border-l border-r rounded-r">Upcoming</a>
                </div>
                <div id="live" class="tab-content flex mt-8">
                    <div class="daily-goal card w-1/3 flex flex-col items-center">
                        <div>
                            <img src="/images/target.png" class="challenge-img" alt="">
                        </div>
                        <h2 class="text-grey-dark text-center mt-4">Daily Goal</h2>
                        <p class="text-grey-dark mt-1"><i class="fas fa-calendar-alt"></i> 1 day</p>
                        <div class="flex w-full justify-center mt-4">
                            <div class="flex flex-col items-center">
                                <p class="text-xs mb-1">Time Remaining</p>
                                <p class="flex justify-between text-green">
                                    <i class="far fa-clock"></i>
                                    <span>12 hrs</span>
                                </p>
                            </div>
                            <div class="flex items-center">
                                <a href="" class="flex-1 rounded px-4 py-2 ml-4 bg-red text-white">Leave</a>
                            </div>
                        </div>
                    </div>
                    <div class="weekend-goal card w-1/3 flex flex-col items-center mx-8">
                        <div>
                            <img src="/images/target.png" class="challenge-img" alt="">
                        </div>
                        <h2 class="text-grey-dark text-center mt-4">weekend Goal</h2>
                        <p class="text-grey-dark mt-1"><i class="fas fa-calendar-alt"></i> 2 day</p>
                        <div class="flex w-full justify-center mt-4">
                                <div class="flex flex-col items-center">
                                    <p class="text-xs mb-1">Time Remaining</p>
                                    <p class="flex justify-between text-green">
                                        <i class="far fa-clock"></i>
                                        <span>12 hrs</span>
                                    </p>
                                </div>
                                <div class="flex items-center">
                                    <a href="" class="flex-1 rounded px-4 py-2 ml-4 bg-red text-white">Leave</a>
                                </div>
                            </div>
                    </div>
                    <div class="hustler card w-1/3 flex flex-col items-center">
                        <div>
                            <img src="/images/target.png" class="challenge-img" alt="">
                        </div>
                        <h2 class="text-grey-dark text-center mt-4">Challenge Name</h2>
                        <p class="text-grey-dark mt-1"><i class="fas fa-calendar-alt"></i> 1 day</p>
                        <div class="flex w-full justify-center mt-4">
                                <div class="flex flex-col items-center">
                                    <p class="text-xs mb-1">Time Remaining</p>
                                    <p class="flex justify-between text-green">
                                        <i class="far fa-clock"></i>
                                        <span>12 hrs</span>
                                    </p>
                                </div>
                                <div class="flex items-center">
                                    <a href="" class="flex-1 rounded px-4 py-2 ml-4 bg-red text-white">Leave</a>
                                </div>
                            </div>
                    </div>
                </div>
                <div id="upcoming" class="tab-content flex mt-8">
                        <div class="daily-goal card w-1/3 flex flex-col items-center">
                            <div>
                                <img src="/images/target.png" class="challenge-img" alt="">
                            </div>
                            <h2 class="text-grey-dark text-center mt-4">Daily Goal</h2>
                            <p class="text-grey-dark mt-1"><i class="fas fa-calendar-alt"></i> 1 day</p>
                            <a href="#" class="text-grey my-4">Rules</a>
                            <a href="#" class="bg-green  rounded px-6 py-2 text-white">Start</a>
                        </div>
                        <div class="weekend-goal card w-1/3 flex flex-col items-center mx-8">
                            <div>
                                <img src="/images/target.png" class="challenge-img" alt="">
                            </div>
                            <h2 class="text-grey-dark text-center mt-4">weekend Goal</h2>
                            <p class="text-grey-dark mt-1"><i class="fas fa-calendar-alt"></i> 2 day</p>
                            <a href="#" class="text-grey my-4">Rules</a>
                            <a href="#" class="bg-green  rounded px-6 py-2 text-white">Start</a>
                        </div>
                        <div class="hustler card w-1/3 flex flex-col items-center">
                            <div>
                                <img src="/images/target.png" class="challenge-img" alt="">
                            </div>
                            <h2 class="text-grey-dark text-center mt-4">Challenge Name</h2>
                            <p class="text-grey-dark mt-1"><i class="fas fa-calendar-alt"></i> 1 day</p>
                            <a href="#" class="text-grey my-4">Rules</a>
                            <a href="#" class="bg-green  rounded px-6 py-2 text-white">Start</a>
                        </div>
                </div>
            </div>
        </div>
    </main>
    <% include partials/footer %>
</body>
