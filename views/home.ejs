<% include partials/header %>
<title>IHL</title>
</head>

<body class="min-h-screen flex-col">
    <% include partials/nav %>
    <main class="flex flex-1 min-h-screen">
        <!-- side bar -->
        <div class="sidebar w-1/6 bg-blue">
            <div class="cover text-white flex flex-col justify-center items-center px-4 pt-8">
                <div class="flex justify-center">
                    <img src="http://lorempixel.com/80/80/people/" alt="" class="rounded-full">
                </div>
                <p class="text-center my-3">Person name</p>
                <div class="w-full border-grey">
                    <p class="block mb-4">Rank <span class="float-right">#1</span></p>
                </div>
                <div class="w-full border-b">
                    <div class="h-5 rounded-full bg-white p-1">
                        <div class="w-1/2 bg-blue h-3 rounded-full"> 
                        </div>
                    </div>
                    <p class=" mb-4 mt-1"><small><strong>145</strong> more points to level up</small></p>
                </div>
            </div>
            <div class="side-links flex">
                <ul class="list-reset flex-1">
                    <li class="py-4 hover:bg-blue-dark"> <a class="text-white mx-8" href="">Home</a></li>
                    <li class="py-4 hover:bg-blue-dark"> <a class="text-white mx-8" href="">Friends</a></li>
                    <li class="py-4 hover:bg-blue-dark"> <a class="text-white mx-8" href="">Challenges</a></li>
                    <li class="py-4 hover:bg-blue-dark"> <a class="text-white mx-8" href="">Achievements</a></li>
                    <li class="py-4 hover:bg-blue-dark"> <a class="text-white mx-8" href="">Leaderboard</a></li>
                    <li class="py-4 hover:bg-blue-dark"> <a class="text-white mx-8" href="">Settings</a></li>
                    <li class="py-4 hover:bg-blue-dark"> <a class="text-white mx-8" href="/logout">Logout</a></li>
                </ul>
            </div>
        </div>

        <!-- main-content -->
        <div class="main-content flex w-5/6 px-8 mb-8">

            <!-- main-content leftside -->
            <div >
                <h2 class="text-grey-dark my-8">Profile</h2>
                <div class="card-container flex flex-col">
                    <div class="flex">
                        <div class="user card w-3/5">
                            <div class="flex justify-center w-1/2">
                                <img class="rounded-full" src="http://lorempixel.com/100/100/people/" alt="">
                            </div>
                            <div class="px-4">
                                <h3 class="text-grey-darker">Person Name</h3>
                                <p><small class="text-grey-dark">Latest badge won name</small></p>
                                <p class="mt-1 text-grey-darker">Lorem, ipsum dolor sit amet consectetur adipisicing elit</p>
                            </div>
                        </div>
                        <div class="device card ml-8 flex-col flex-1">
                            <h4 class="text-grey-darker">Active <small class="ml-2 text-blue">Device name</small></h4>
                            <p class="text-grey-dark"> </p>
                        </div>
                    </div>
                    <div class="flex my-8 justify-between">
                        <div class="card w-1/3 flex flex-col justify-center items-center">
                            <h4 class="text-grey-dark">Today activity</h4>
                            <canvas id="dailyActivity">
                            </canvas>
                            <div class="flex mt-2">
                                <div>
                                    <div class="running w-8 mx-2 h-1"></div>
                                    <p class="text-xss text-center mt-1 text-grey-darker">running</p>
                                </div>
                                <div>
                                    <div class="walking w-8 mx-2 h-1"></div>
                                    <p class="text-xss text-center mt-1 text-grey-darker">walking</p>
                                </div>
                                <div>
                                    <div class="sleeping w-8 mx-2 h-1"></div>
                                    <p class="text-xss text-center mt-1 text-grey-darker">sleeping</p>
                                </div>
                                <div>
                                    <div class="cardio w-8 mx-2 h-1"></div>
                                    <p class="text-xss text-center mt-1 text-grey-darker">cardio</p>
                                </div>
                            </div>
                        </div>
                        <div class="card flex flex-col w-1/3 mx-4">
                            <h4 class="text-grey-dark">Steps</h4>
                            <p>10234</p>
                            <canvas id="stepsCanvas">

                            </canvas>
                        </div>
                        <div class="card flex flex-col w-1/3 ">
                            <h4 class="text-grey-dark">pulse</h4>
                            <div class="flex justify-between mt-8">
                                <p>78bpm</p>
                                <span class="text-green">normal</span>
                            </div>
                        </div>
                    </div>
                    <div class="flex my-8 justify-between">
                        <div class="calories flex-col card w-1/3">
                            <h4 class="text-grey-dark">Calories</h4>
                            <div class="calories-chart">

                            </div>
                        </div>
                        <div class="weight flex-col card w-1/3 mx-4">
                            <h4 class="text-grey-dark">weight</h4>
                            <p>56 kg</p>
                        </div>
                        <div class="sleep card w-2/3">
                        </div>
                    </div>
                    <div class="flex flex-col">
                        <div class="card flex flex-col items-center">
                            <h3 class="text-grey-dark mb-4">pastActivity</h3>
                            <canvas id="pastActivity" class="h-64 max-w-md" width="400">
                            </canvas>
                        </div>
                    </div>
                </div>
            </div>

            <!-- main-content right-side -->
            <div class=" w-1/3 flex flex-col ml-8">
                <div>
                    <h3 class="title ml-4">Ongoing Challenges</h3>
                    <div class="flex -mt-4 flex-col">
                        <% for (var i = 0; i < 3; i++){ %>
                        <div class="event card border rounded m-4 p-4">
                            <div class="w-full flex-col items-center">
                                <h4 class="text-blue">Event 1</h4>
                                <p class="mt-2 text-grey-dark"><small>you are <strong>123</strong> points behind </small></p>
                                <div class="flex mt-2 pt-2 text-grey-darker text-center border-t border-grey-light">
                                    <div class="w-1/2">
                                        <i class="fas fa-calendar-alt text-xs"><small class="ml-2">started on: 21/11/12</small></i>
                                    </div>
                                    <div class="w-1/2 border-r border-grey-light mr-2">
                                        <i class="fas fa-stopwatch text-xs"><small>12hrs remaining</small></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% } %>
                    </div>
                </div>
            </div>

        </div>
    </main>
    <% include partials/footer %>
</body>
    <script src="/js/pastActivity.js"></script>
    <script src="/js/dailyactivity.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://code.jquery.com/jquery-1.11.1.js"></script>
    <script>
      var socket = io();
      socket.on('data', function(data){
          console.log(data);
        });
        socket.emit('getData');
      setInterval(function(){
        socket.emit('getData');
      }, 30000)
    </script>
</html>
