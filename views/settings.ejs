<% include partials/header %>
<title>IHL | Settings</title>
</head>
<script>
  function save(){
    document.getElementById('changedetails').submit();
  }
  function update(){
    document.getElementById('changegoals').submit();
  }
</script>
<body class="min-h-screen flex-col">
    <% include partials/nav %>
    <main class="flex flex-1 min-h-screen">
        <!-- side bar -->
        <div class="sidebar w-1/6 bg-blue">
            <div class="cover text-white flex flex-col justify-center items-center px-4 pt-8">
                <div class="flex justify-center">
                    <img src="http://lorempixel.com/80/80/people/" alt="" class="rounded-full">
                </div>
                <p class="text-center my-3">Person name</p>
                <div class="w-full border-grey">
                    <p class="block mb-4">Rank <span class="float-right">#1</span></p>
                </div>
                <div class="w-full border-b">
                    <div class="h-5 rounded-full bg-white p-1">
                        <div class="w-1/2 bg-blue h-3 rounded-full">
                        </div>
                    </div>
                    <p class=" mb-4 mt-1"><small><strong>145</strong> more points to level up</small></p>
                </div>
            </div>
            <div class="side-links flex">
                <ul class="list-reset flex-1">
                    <a class="text-white" href="/home"><li class="py-4 px-4 hover:bg-blue-dark"> Home</li></a>
                    <a class="text-white" href="/friends"><li class="py-4 px-4 hover:bg-blue-dark"> Friends</li></a>
                    <a class="text-white" href="/challenges"><li class="py-4 px-4 hover:bg-blue-dark"> Challenges</li></a>
                    <a class="text-white" href="/achievements"><li class="py-4 px-4 hover:bg-blue-dark"> Achievements</li></a>
                    <a class="text-white" href="/leaderboard"><li class="py-4 px-4 hover:bg-blue-dark"> Leaderboard</li></a>
                    <a class="text-white" href="#"><li class="py-4 px-4 hover:bg-blue-dark"> Settings</li></a>
                    <a class="text-white" href="/logout"><li class="py-4 px-4 hover:bg-blue-dark"> Logout</li></a>
                </ul>
            </div>
        </div>


        <!-- main-content -->
        <div class="main-content flex flex-col w-5/6 px-8 mb-8">
            <h1 class="my-8 py-2 border-b border-grey-light font-normal text-grey-darker tracking-wide">Settings</h1>
            <div class="my-8 mx-10 flex">
                <div class="card w-1/2 flex items-center">
                    <form id="photoUpload" action="#">
                        <div class="flex w-full">
                            <div class="w-1/3">
                                <img src="<%= profileimg%>" class="w-full rounded-full" alt="">
                            </div>
                            <div class="w-2/3 flex flex-col ml-8">
                                <h3 class="font-normal text-grey-darker">Upload profile photo</h3>
                                <input class="my-5 cursor-pointer" type="file" name="photoUpload" id="photoUpload">
                                <input class="border-blue text-blue cursor-pointer py-2 px-4 w-32 border-1 rounded" type="button" name="upload" value="upload">
                            </div>
                        </div>
                    </form>
                </div>
                <div class="device flex flex-col card w-1/2 ml-4">
                    <h3 class="text-grey-darker font-normal">
                        Connected Device
                        <i id = "editDevice" class="far fa-edit font-bold text-xl text-blue float-right" onclick="editDevice(event)"></i>
                        <span class="px-3 py-1 font-light text-sm text-white bg-green rounded float-right mr-4 hidden" id = "update" onclick="update()">update</span>
                    </h3>
                    <form  action="/settings" method ="post" id ="changegoals">
                        <div class="profile flex justify-around w-full">
                            <div class="w-1/3 flex flex-col">
                                <img src="/images/device.png" class="w-full rounded-full" alt="">
                                <p class="font-bold text-blue text-center">Device Name</p>
                            </div>
                            <div class="w-2/3 flex flex-col items-center">
                                <h4 class="text-grey-dark mt-4 mb-2 font-normal">Daily Goal</h4>
                                <div class="flex flex-col w-2/3">
                                    <input id = "steps" type="text" placeholder="steps"  value="<%= steps%>"  name="steps" id="steps" class="border-blue border-b py-2 px-4 rounded" readonly><br>
                                    <input id = "calorie" type="text" placeholder="calories" name="calories" value="<%= calories%>" id="calories" class="border-blue border-b py-2 px-4 rounded mt-2" readonly>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="my-8 mx-10">
                <div class="card flex flex-col">
                    <h3 class="mb-8 text-grey-darker font-normal">
                        Profile Settings
                        <i id="edit" class="far fa-edit font-bold text-xl text-blue float-right block" onclick="edit(event)"></i>
                        <a id="save" class="cursor-pointer px-4 py-1 font-light text-sm text-white bg-green rounded float-right mr-4 hidden" onclick='save()' >save
                        </a>
                    </h3>
                    <form action="/settings" method="post" class="flex p-4 w-full" id='changedetails'>
                        <div class="w-1/2">
                            <div class="flex flex-col w-full">
                                <div class="firstName flex flex-col w-full">
                                    <label class="text-grey-darker ">First Name</label>
                                    <input readonly="true" id="first" type="text" name="firstName" class="w-full rounded mt-4 border-b border-blue bg-grey-lighter p-2" value="<%= firstname %>" placeholder="Enter first name" >
                                </div>
                                <div  class="lastName mt-4 flex flex-col w-full">
                                    <label class="text-grey-darker mt-2">Last Name</label>
                                    <input readonly="true" id="last" type="text" name="lastName" class="w-full rounded mt-4 border-b border-blue bg-grey-lighter p-2" placeholder="Enter last name" value="<%= lastname %>">
                                </div>
                                <div class=" profile-url w-full flex flex-col mt-10">
                                    <label class="text-grey-darker mt-2">Profile Url</label>
                                    <input readonly="true" id="prof-url" type="text" name="profileUrl" class="w-full rounded mt-4 border-b border-blue bg-grey-lighter p-2" placeholder="facebook.com/username121">
                                </div>
                                <div id="update-pass" class="update-pass w-full flex flex-col mt-10">
                                    <h4 class="text-grey-darker font-normal">Change Password</h4>
                                    <div class="flex w-full items-center mt-4">
                                        <label class="text-grey-darker w-1/3">Type Old</label>
                                        <input readonly="true" id="old-pass" type="password" name="old_pass" class="w-full rounded w-2/3 p-2 border-b border-blue rounded bg-grey-lighter" placeholder="Old password">
                                    </div>
                                    <div class="flex w-full items-center mt-4">
                                        <label class="text-grey-darker w-1/3">Type New</label>
                                        <input readonly="true"  id="new-pass" type="password" name="new_pass" class="w-full rounded w-2/3 p-2 border-b border-blue rounded bg-grey-lighter" placeholder="New password">
                                    </div>
                                    <div class="flex w-full items-center mt-4">
                                        <label class="text-grey-darker w-1/3">Retype New</label>
                                        <input readonly="true" id="confirm-new-pass" type="password" name="confirm_new_pass" class="w-full w-2/3 rounded p-2 border-b border-blue rounded bg-grey-lighter" placeholder="Confirm password">
                                        <input type="text" name="details"  style="display:none">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="w-1/2 ml-8">
                            <div class="w-full">
                                <label class="text-grey-darker mt-2">Add a Bio</label>
                                <textarea id="bio" readonly="true" name="bio" class="mt-4 h-32 w-full bg-grey-lighter rounded p-2" placeholder="Describe yourself here..."></textarea>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <!-- <div class="my-8 mx-10">
                <div class="card flex flex-col">
                    <h3>Connected Devices</h3>

                </div>
            </div> -->
            <div class="my-8 mx-10">
                <div class="card flex flex-col">
                    <h3 class="text-grey-darker mb-4 font-normal">Social Profiles</h3>
                    <ul class="list-reset flex flex-col">
                        <li class="border-b border-grey py-2 px-4 text-grey-dark mt-2">
                            <i class="fab fa-facebook-f text-blue-dark"></i>
                            <span class="ml-4">Username</span>
                            <p class="float-right"><a href="" class="text-red">Disconect</a></p>
                        </li>
                        <li class="border-b border-grey py-2 px-4 text-grey-dark mt-2">
                            <i class="fab fa-google-plus-g text-orange-dark -ml-1"></i>
                            <span class="ml-2">Username</span>
                            <p class="float-right"><a href="" class="text-red">Disconect</a></p>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </main>
    <% include partials/footer %>
</body>
<script src="/js/main.js"></script>
</html>
